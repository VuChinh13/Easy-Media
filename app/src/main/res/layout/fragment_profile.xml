    <TextView
        android:id="@+id/tv_total_post"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_marginStart="15dp"
        android:fontFamily="sans-serif-medium"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
