<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tomtom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Map Fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map_container"
        android:name="com.tomtom.sdk.map.display.ui.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tomtom:mapKey="h3ch6HjcPyPGwH2oV1pz7e3m0hlEPr8m" />

    <!-- Overlay EditText + RecyclerView -->
    <LinearLayout
        android:id="@+id/search_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#CCFFFFFF"
        android:orientation="vertical"
        android:padding="8dp">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập địa điểm..." />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_suggestions"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
    </LinearLayout>
</FrameLayout>


