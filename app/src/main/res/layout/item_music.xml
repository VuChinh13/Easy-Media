<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeWidth="0dp"
        app:contentPadding="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivMusic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_music_default" />
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Tiêu đề"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvArtist"
        app:layout_constraintLeft_toRightOf="@id/cardView"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyễn Văn A"
        android:textColor="#A4A9A8"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tvTitle"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <ImageView
        android:id="@+id/ivDot"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_dot"
        app:layout_constraintBottom_toBottomOf="@id/tvArtist"
        app:layout_constraintLeft_toRightOf="@id/tvArtist"
        app:layout_constraintTop_toTopOf="@id/tvArtist" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:34"
        android:textColor="#A4A9A8"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/tvArtist"
        app:layout_constraintLeft_toRightOf="@id/ivDot"
        app:layout_constraintTop_toTopOf="@id/tvArtist" />

</androidx.constraintlayout.widget.ConstraintLayout>